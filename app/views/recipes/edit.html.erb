<div class="display-6">Editing: <%= @recipe.title %></div>
<hr>

<div id="edit-recipe-body" class="my-4">
  <div class="row">
    <div class="col-7">
      <%= render "form", recipe: @recipe %>

      <%= 
          button_to "Delete this recipe",
          @recipe,
          {
          method: :delete,
          class: "btn btn-outline-danger",
          data: { turbo_confirm: "Are you sure you want to delete this recipe?" }
          }
      %>
    </div>
    <div class="col-5">
      <%= render "utility_panel", recipe: @recipe, utilities: ["back", "discard"] %>
    </div>
  </div>
</div>
